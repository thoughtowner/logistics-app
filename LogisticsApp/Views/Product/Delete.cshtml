@model LogisticsApp.Models.Product

@{
    ViewData["Title"] = "Подтверждение удаления товара";
}

<h1>Подтвердите удаление товара</h1>

<p>Вы уверены, что хотите удалить товар "<strong>@Model.Title</strong>"?</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Отмена</a>
</form>
