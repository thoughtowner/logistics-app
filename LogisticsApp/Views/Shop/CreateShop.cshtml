@model LogisticsApp.Models.CreateShopViewModel

@{
    ViewData["Title"] = "Добавить магазин";
}

<h1>Добавить новый магазин</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Название магазина</label>
        <input type="text" class="form-control" id="Title" name="Title" required />
    </div>

    <div class="form-group">
        <label for="PortalUserId">Выберите ответственного пользователя</label>

        @if (Model.Users.Any())
        {
            <select class="form-control" id="PortalUserId" name="PortalUserId" required>
                @foreach (var user in Model.Users)
                {
                    <option value="@user.Value" selected="@((user.Value == Model.PortalUserId) ? "selected" : null)">
                        @user.Text
                    </option>
                }
            </select>
        }
        else
        {
            <p class="text-danger">Нет пользователей, с которыми можно связать магазин.</p>
        }
    </div>

    <button type="submit" class="btn btn-primary">Добавить</button>
</form>

<a href="@Url.Action("Index", "Shop")" class="btn btn-secondary mt-3">Назад</a>
