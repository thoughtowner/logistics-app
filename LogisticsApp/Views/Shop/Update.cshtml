@model LogisticsApp.Models.UpdateShopViewModel

@{
    ViewData["Title"] = "Редактировать магазин";
}

<h2>Редактировать магазин</h2>

<form method="post">
    <div class="form-group">
        <label for="Title">Название магазина</label>
        <input type="text" class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>

<div>
    <a href="@Url.Action("Index", "Shop")">Вернуться к списку магазинов</a>
</div>
