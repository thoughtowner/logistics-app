@model LogisticsApp.Models.Truck

@{
    ViewData["Title"] = "Товары грузовика: " + Model.Brand + Model.Model + Model.StateNumber;
}

<h1>Товары грузовика: @Model.Brand @Model.Model @Model.StateNumber</h1>

@if (Model.LoadedProducts.Any())
{
    <ul class="list-group">
        @foreach (var loadedProduct in Model.LoadedProducts)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="@Url.Action("ProductDetails", "Truck", new { truckId = Model.Id, productId = loadedProduct.OrderedProduct.FactoryProduct.Product.Id })">
                    @loadedProduct.OrderedProduct.FactoryProduct.Product.Title
                </a> - Количество: @loadedProduct.Quantity
            </li>
        }
    </ul>
}
else
{
    <p>В этом грузовике пока нет товаров.</p>
}

<div>
    <a href="@Url.Action("Index", "Truck")">Вернуться к списку грузовиков</a>
</div>
