@model LogisticsApp.Models.Factory

@{
    ViewData["Title"] = "Подтверждение удаления фабрики";
}

<h1>Подтвердите удаление фабрики</h1>

<p>Вы уверены, что хотите удалить фабрику "<strong>@Model.Title</strong>"?</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a href="@Url.Action("Index", "Factory")" class="btn btn-secondary">Отмена</a>
</form>
