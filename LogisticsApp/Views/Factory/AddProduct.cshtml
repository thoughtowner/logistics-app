@model LogisticsApp.Models.AddFactoryProductViewModel

@{
    ViewData["Title"] = "Добавить товар в фабрику";
}

<h1>Добавить товар в фабрику</h1>

<form method="post">
    <div class="form-group">
        <label for="ProductId">Выберите товар</label>

        @if (Model.Products.Any())
        {
            <select class="form-control" id="ProductId" name="ProductId" required>
                @foreach (var product in Model.Products)
                {
                    <option value="@product.Value">@product.Text</option>
                }
            </select>
        }
        else
        {
            <p class="text-danger">Нет товаров, которые можно добавить в фабрику.</p>
        }
    </div>

    <div class="form-group">
        <label for="Quantity">Количество</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" min="1" required />
    </div>

    <button type="submit" class="btn btn-primary">Добавить</button>
</form>

<a href="@Url.Action("Products", "Factory", new { id = Model.FactoryId })" class="btn btn-secondary mt-3">Назад</a>
